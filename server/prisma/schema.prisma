generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        Int        @id @default(autoincrement())
  fullName  String
  password  String
  geres     Int
  email     String     @unique
  cpf       String     @unique
  createdAt DateTime   @default(now())
  logs      Log[] // Relacionamento 1:N com Log
  dataForms DataForm[] // Relacionamento 1:N com DataForm
}

model Log {
  id     Int      @id @default(autoincrement())
  idUser Int // Chave estrangeira para User
  idForm Int
  user   User     @relation(fields: [idUser], references: [id])
  form   DataForm @relation(fields: [idForm], references: [id])
}

model DataForm {
  id        Int      @id @default(autoincrement())
  idUser    Int
  user      User     @relation(fields: [idUser], references: [id])
  dimensao  String
  tema      String
  macro     String
  geres     String
  indicador String
  valor     Int
  dataRef   String
  createdAt DateTime @default(now())
  Log       Log[]
}
